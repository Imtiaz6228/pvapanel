<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - PVA Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<%- include('./partials/navbar') %>

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title mb-0"><i class="fas fa-shopping-cart me-2"></i>Checkout</h3>
                    </div>
                    <div class="card-body">
                        <form action="/submit-order" method="POST">
                            <div class="mb-3">
                                <label for="email" class="form-label">Real Email Address*</label>
                                <input type="email" class="form-control" id="email" name="email" required placeholder="your@email.com">
                            </div>
                            <div class="mb-3">
                                <label for="telegram" class="form-label">Telegram ID*</label>
                                <input type="text" class="form-control" id="telegram" name="telegram" required placeholder="@username or numeric ID">
                            </div>
                            <div class="mb-3">
                                <label for="product" class="form-label">Product</label>
                                <input type="text" class="form-control" id="product" name="product" value="<%= product || '' %>" placeholder="e.g., Facebook PVA">
                            </div>
                            <div class="mb-3">
                                <label for="quantity" class="form-label">Quantity for Order*</label>
                                <input type="number" class="form-control" id="quantity" name="quantity" min="1" required>
                            </div>
                            <div class="mb-3">
                                <label for="payment" class="form-label">Payment Method*</label>
                                <select class="form-select" id="payment" name="payment" required>
                                    <option value="" selected disabled>Select payment method</option>
                                    <option value="usdt-trc20">USDT (TRC20)</option>
                                    <option value="usdt-bep20">USDT (BEP20)</option>
                                    <option value="bitcoin">Bitcoin</option>
                                    <option value="usdt-aptos">USDT (Aptos)</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="blockchainFee" class="form-label">Blockchain Fee</label>
                                <input type="text" class="form-control" id="blockchainFee" name="blockchainFee" readonly placeholder="Calculated automatically">
                                <small class="text-muted">Fee will be calculated based on quantity and payment method.</small>
                            </div>
                            <div class="mb-3">
                                <label for="txid" class="form-label">Transaction ID (TXID)*</label>
                                <input type="text" class="form-control" id="txid" name="txid" required placeholder="Enter TXID after payment">
                                <small class="text-muted">Enter the transaction ID from your crypto wallet after completing the payment.</small>
                            </div>
                            <button type="submit" class="btn btn-success btn-lg w-100">Submit Buy Order</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Simple blockchain fee calculation
    function calculateFee() {
        const quantity = document.getElementById('quantity').value;
        const payment = document.getElementById('payment').value;
        let fee = 0;
        if (quantity && payment) {
            // Assuming $0.50 per unit blockchain fee
            fee = (quantity * 0.5).toFixed(2);
        }
        document.getElementById('blockchainFee').value = fee + ' USD';
    }

    document.getElementById('quantity').addEventListener('input', calculateFee);
    document.getElementById('payment').addEventListener('change', calculateFee);
</script>

<%- include('./partials/foot') %>
